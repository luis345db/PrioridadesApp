@page "/Details"
@inject PrioridadesBLL prioridadesBLL
@attribute [StreamRendering]

<PageTitle>Consulta Prioridades</PageTitle>

<div class=" container">

    <div class="card shadow-lg">

        <div class="card-header">
            <h3><strong>Consulta Personas</strong></h3>
            <div class="d-flex align-items-start ">

                
                    <a href="/Create"><em>Crear</em></a>

            </div>
        </div>



        <div class="table-responsive">



            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descripcion</th>
                        <th>Dias Comprometidos</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ListaPrioridades)
                    {
                        <tr>
                            <td>@item.PriodidadID</td>
                            <td>@item.Descripcion</td>
                            <td>@item.DiasComprometidos</td>
                            <td><a href="/Edit/prioridadId=@item.PriodidadID"><em>Editar</em></a></td>
                            <td><a href="/Delete/prioridadId=@item.PriodidadID"><em>Eliminar</em></a></td>
                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>


@code {
    public Prioridades prioridades { get; set; } = new Prioridades();
    
    public List<Prioridades> ListaPrioridades { get; set; } = new List<Prioridades>();

    protected override async void OnInitialized()
    {
        ListaPrioridades = await prioridadesBLL.GetList(l => true);
    }


}

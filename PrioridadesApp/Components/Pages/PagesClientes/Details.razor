@page "/C_Details"
@inject ClientesBLL clientesBLL
@attribute [StreamRendering]

<PageTitle>Consulta Clientes</PageTitle>

<div class=" container">

    <div class="card shadow-lg">

        <div class="card-header">
            <h3><strong>Consulta Clientes</strong></h3>
            <div class="d-flex align-items-start ">


                <a href="/C_Create"><em>Crear</em></a>

            </div>
        </div>



        <div class="table-responsive">



            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombres</th>
                        <th>Telefono</th>
                        <th> Celular </th>
                        <th>RNC</th>
                        <th>Email</th>
                        <th>Direccion</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ListaClientes)
                    {
                        <tr>
                            <td>@item.ClienteId</td>
                            <td>@item.Nombres</td>
                            <td>@item.Telefono</td>
                            <td>@item.Celular</td>
                            <td>@item.RNC</td>
                            <td>@item.Email</td>
                            <td>@item.Direccion</td>
                            <td><a href="/C_Edit/clienteId=@item.ClienteId"><em>Editar</em></a></td>
                            <td><a href="/C_Delete/clienteId=@item.ClienteId"><em>Eliminar</em></a></td>
                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>


@code {
    public Clientes clientes { get; set; } = new Clientes();

    public List<Clientes> ListaClientes { get; set; } = new List<Clientes>();

    protected override async void OnInitialized()
    {
        ListaClientes = await clientesBLL.GetList(l => true);
    }


}
